<Window x:Class="MVVMPhotoApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="600" Width="800">
    <Window.Resources>
        <Style TargetType="Border">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Height" Value="210"/>
                    <Setter Property="Width" Value="210"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <WrapPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <Border Height="200" Width="200" BorderBrush="Brown" BorderThickness="2"></Border>
            <Border Height="200" Width="200" BorderBrush="Green" BorderThickness="2"></Border>
            <Border Height="200" Width="200" BorderBrush="Yellow" BorderThickness="2"></Border>
        </WrapPanel>
    </Grid>
</Window>
